{
    "configurations": [
        {
            "name": "Mac",
            "includePath": [
                "${workspaceFolder}/**",
                "/usr/local/include/SDL2"
            ],
            "defines": [
                "USE_SDL_VERSION=2",
                "SUPPORT_HOSTDRV=1",
                "OSLANG_UTF8=1",
                "SUPPORT_NET=1",
                "SUPPORT_16BPP=1",
                "SUPPORT_32BPP=1"
            ],
            "macFrameworkPath": [
                "/Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX.sdk/System/Library/Frameworks"
            ],
            "compilerPath": "/usr/bin/clang",
            "cStandard": "c11",
            "cppStandard": "c++17",
            "intelliSenseMode": "clang-x64"
        }
    ],
    "version": 4
}